<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picc"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Find"
        android:layout_centerHorizontal="true"
        android:textColor="#F7F8FA"
        android:textSize="50sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_baseline_search_24" />
    <ImageView
        android:layout_width="332dp"
        android:layout_height="556dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Register"
        android:layout_marginTop="120dp"
        android:textColor="#B9E6EC"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/PersonName"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/bg"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
        android:drawablePadding="5dp"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="#1A1B1A"
        android:layout_centerHorizontal="true" />


    <EditText
        android:id="@+id/Password"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/bg"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="5dp"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#1A1B1A"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/bg"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColorHint="#1A1B1A"
       android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_marginTop="380dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg"
        android:drawableLeft="@drawable/ic_baseline_phone_android_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Enter your mobile no"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColorHint="#1A1B1A" />
    <Button
        android:id="@+id/signup"
        android:layout_width="119dp"
        android:layout_height="43dp"
        android:layout_marginTop="450dp"
        android:text="Sign up"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        app:backgroundTint="@color/purple_500"
        app:backgroundTintMode="multiply"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:fontFamily="casual"
        android:text="Already have an account?"
        android:textColor="#02121E"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/Regtolog"
        android:layout_width="119dp"
        android:layout_height="43dp"
        android:layout_marginTop="570dp"
        android:background="@drawable/btn"
        android:text="Sign In"
        android:textColor="@color/white"
        app:backgroundTint="@color/material_on_primary_disabled"
        app:backgroundTintMode="multiply"
        android:layout_centerHorizontal="true" />

</RelativeLayout>