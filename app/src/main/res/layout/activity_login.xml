<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picc"
    tools:context=".login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Find"
        android:layout_centerHorizontal="true"
        android:textColor="#F7F8FA"
        android:textSize="50sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_baseline_search_24"
        />
    <ImageView
        android:layout_width="332dp"
        android:layout_height="556dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/bg" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Login"
        android:layout_marginTop="150dp"
        android:textColor="#B9E6EC"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/LoginName"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/bg"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
        android:drawablePadding="5dp"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="#1A1B1A"
        android:layout_centerHorizontal="true"
         />

    <EditText
        android:id="@+id/LoginPassword"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/bg"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="5dp"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#1A1B1A"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/login"
        android:layout_width="119dp"
        android:layout_height="43dp"
        android:text="Login"
        android:layout_marginTop="400dp"
        android:background="@drawable/btn"
        android:textColor="@color/white"
        app:backgroundTint="@color/purple_500"
        app:backgroundTintMode="multiply"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:fontFamily="casual"
        android:text="Don't have any accound?"
        android:textColor="#02121E"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/LogintoReg"
        android:layout_width="119dp"
        android:layout_height="43dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/btn"
        android:text="Register"
        android:textColor="@color/white"
        app:backgroundTint="@color/material_on_primary_disabled"
        app:backgroundTintMode="multiply"
        android:layout_centerHorizontal="true" />

</RelativeLayout>